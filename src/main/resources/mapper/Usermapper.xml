<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

    <mapper namespace="spring.board.dao.MyBatis.UserMapper">
        <select id="selectUser" parameterType="String" resultType="spring.board.entity.User">
            select * from user where id = #{id}
        </select>
        <insert id="insertUser" parameterType="spring.board.dto.UserRequest">
            insert into user(id, name, password, email)
            values (#{id}, #{name}, #{password}, #{email})
        </insert>
    </mapper>